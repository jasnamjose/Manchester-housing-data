import pandas as pd
import seaborn as sns
import numpy as np
import matplotlib.pyplot as plt
df=pd.read_csv('data project.csv')
df
print(df.info())
print(df.head())
print(df.describe())
print(df.shape)
print(df.isnull().sum())
df.fillna(df.mean,inplace=True)
df.isnull().sum()
waterfront_counts=df['waterfront'].value_counts()
waterfront_counts
avg_price = df.groupby('waterfront')['price'].mean().reset_index()
plt.figure(figsize=(10, 6))
plt.bar(avg_price['waterfront'],avg_price['price'], color=['blue', 'green'])
plt.xlabel('Waterfront')
plt.ylabel('Average Price')
plt.title('Average Price of Waterfront vs Non-Waterfront Properties')
plt.xticks([0, 1], ['Non-Waterfront', 'Waterfront'])
plt.show()
plt.figure(figsize=(8, 4))
sns.scatterplot(data=df, x='sqft_living', y='price')
plt.title('Price vs. Sqft Living')
plt.xlabel('Sqft Living')
plt.ylabel('Price')
data = pd.DataFrame(df)
data = data.sort_values('sqft_total')
plt.figure(figsize=(8, 4))
plt.plot(data['sqft_total'], data['price'], marker='o')
plt.xlabel('Total Square Footage')
plt.ylabel('Price')
plt.title('Line Plot of Price vs Total Square Footage')
plt.show()
sns.boxplot(x='bedrooms', y='price', data=df)
plt.title('Price vs. Bedrooms')
plt.xlabel('Number of Bedrooms')
plt.ylabel('Price')
plt.figure(figsize=(10, 6))
sns.barplot(x='bathrooms', y='price', data=df, ci=None)
plt.xlabel('Number of Bathrooms')
plt.ylabel('Price')
plt.title('Bar Plot of Price vs Number of Bathrooms')
plt.show()
sns.boxplot(x='floors', y='price', data=df)
plt.title('Price vs Floors')
plt.xlabel('Number of Floors')
plt.ylabel('Price')
data= pd.DataFrame(data)
plt.figure(figsize=(8, 4))
sns.violinplot(x='condition', y='price', data=data)
plt.title('Violin Plot of Property Condition vs Price')
plt.xlabel('Condition')
plt.ylabel('Price')
plt.figure(figsize=(10, 6))
sns.stripplot(x='grade', y='price', data=df, jitter=True)
plt.title('Strip Plot of Property Grade vs Price')
plt.xlabel('Grade')
plt.ylabel('Price')
plt.show()
sns.scatterplot(data=df, x='built', y='price')
plt.title('Price vs Year Built')
plt.xlabel('Year Built')
plt.ylabel('Price')
# Central Limit Theorem demonstration
sample_means = []
for _ in range(1000):
sample = data['price'].sample(n=30)
sample_means.append(sample.mean())
plt.figure(figsize=(12, 6))
sns.histplot(sample_means,kde=True)
plt.title('Sampling Distribution of the Mean (Price)')
plt.xlabel('Mean Price')
plt.ylabel('number of properties')
plt.show()
corr_matrix = df.corr()
plt.figure(figsize=(12, 6))
sns.heatmap(corr_matrix, annot=True, cmap='coolwarm', linewidths=.5)
plt.title('Correlation Heatmap')
plt.show()
